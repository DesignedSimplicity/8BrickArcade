<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | 8 Brick Arcade</title>
    @Styles.Render("~/content/css")
    <link rel="icon" sizes="128x128" href="/icon.png">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="shortcut icon" type="image/png" href="/favicon.png" />
    <link href="https://fonts.googleapis.com/css?family=Russo+One|Open+Sans" rel="stylesheet" />
    <meta name="description" content="@(String.IsNullOrWhiteSpace(ViewBag.Description) ? "This is a love story about the bits and bricks which started in the '80s and will never end." : ViewBag.Description)" />
</head>
<body>
    <div class="container head">
        <a href="/" class="logo">
            <img src="~/images/logo.png" />
        </a>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>8BrickArcade.com &copy; @DateTime.Now.Year</p>
        </footer>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/15.3.2/react.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/15.3.2/react-dom.min.js"></script>
	@Scripts.Render("~/bundles/js")
    @Scripts.Render("~/bundles/react")
    @RenderSection("scripts", false)
    @Html.ReactInitJavaScript()
</body>
</html>