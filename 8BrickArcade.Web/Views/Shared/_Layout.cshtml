<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | 8 Brick Arcade</title>
    @Styles.Render("~/content/css")
    <link rel="manifest" href="site.webmanifest">
    <link rel="icon" sizes="128x128" href="/icon.png">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="shortcut icon" type="image/png" href="/favicon.png" />
    <link href="https://fonts.googleapis.com/css?family=Russo+One|Open+Sans" rel="stylesheet" />
    <meta name="description" content="@(String.IsNullOrWhiteSpace(ViewBag.Description) ? "This is a love story about the bits and bricks which started in the '80s and will never end." : ViewBag.Description)" />
    <meta property="fb:app_id" content="1761621307395962" />
    <meta property="og:site_name" content="8 Brick Arcade" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="@Request.Url" />
    <meta property="og:image" content="http://8brickarcade.com/images/social.jpg" />
    <meta property="og:image:height" content="720" />
    <meta property="og:image:width" content="960" />
</head>
<body>
    <div class="container head">
        <a href="/" class="logo">
            <img src="~/images/logo.png" />
        </a>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>8BrickArcade.com &copy; @DateTime.Now.Year</p>
        </footer>
    </div>
	
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/15.3.2/react.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/15.3.2/react-dom.min.js"></script>
	@Scripts.Render("~/bundles/js")
    @Scripts.Render("~/bundles/react")
    @RenderSection("scripts", false)
    @Html.ReactInitJavaScript()
    <script>
        (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
            (i[r].q = i[r].q || []).push(arguments)
        }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');
        ga('create', 'UA-132961-16', 'auto');
        ga('send', 'pageview');
    </script>
</body>
</html>